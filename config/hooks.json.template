{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TaskUpdate|Bash|Task",
        "hooks": [
          {
            "type": "command",
            "command": "{{HOME}}/.claude/hooks/ra2-sounds.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=Stop {{HOME}}/.claude/hooks/ra2-sounds.sh <<< '{}'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=Notification {{HOME}}/.claude/hooks/ra2-sounds.sh <<< '{}'"
          }
        ]
      }
    ]
  }
}
